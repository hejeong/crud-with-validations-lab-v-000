<h1>New Song Form</h1>
<%= form_tag(@song) do %>
  Title: <%= text_field_tag :title %> <br>
  <br>
  Released:
  <%= radio_button_tag :released, 'true' %>
  <%= label_tag "True" %>
  <%= radio_button_tag :released, 'false' %>
  <%= label_tag "False" %> <br>
  <br>
  Release Year: <%= text_field_tag :release_year %> <br>
  <br>
  Artist Name: <%= text_field_tag :artist_name %> <br>
  <br>
  Genre: <%= text_field_tag :genre %> <br>
  <br>
  <%= submit_tag "Submit" %>
<% end %>
